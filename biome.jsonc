{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"include": ["src/**/*.js", "src/**/*.ts"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100 // default is `80`
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
